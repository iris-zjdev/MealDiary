<div class="profile-card">
  <div class="profile-info">
    <div class="info-line"><strong>Username:</strong> <%= @user.username %></div>
    <div class="info-line"><strong>Email:</strong> <%= @user.email %></div>
  </div>

  <div class="settings-action">
    <%= link_to "ğŸ” Change Password", edit_password_path, class: "settings-card-button" %>
  </div>
</div>




  <hr>

  <h3>ğŸ“ My Meal Posts</h3>
  <% if @my_posts.any? %>
    <ul>
      <% @my_posts.each do |post| %>
        <li><%= link_to post.title, meal_post_path(post) %> (<%= post.created_at.strftime("%b %d") %>)</li>
      <% end %>
    </ul>
  <% else %>
    <p>You haven't posted anything yet.</p>
  <% end %>

  <hr>

  <h3>ğŸ“Œ My Bookmarks</h3>
  <% if @bookmarked_posts.any? %>
    <ul>
      <% @bookmarked_posts.each do |post| %>
        <li><%= link_to post.title, meal_post_path(post) %> - by <%= post.user.username %></li>
      <% end %>
    </ul>
  <% else %>
    <p>You haven't bookmarked any posts yet.</p>
  <% end %>
</div>
