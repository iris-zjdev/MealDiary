<div class="form-container">
  <h2>🔐 Change Password</h2>

  <% if flash[:alert] %>
    <div class="flash-alert"><%= flash[:alert] %></div>
  <% end %>

  <%= form_with url: update_password_path, method: :patch, local: true do |form| %>
    <div class="form-field">
      <%= form.label :current_password %><br>
      <%= form.password_field :current_password %>
    </div>

    <div class="form-field">
      <%= form.label :new_password %><br>
      <%= form.password_field :new_password %>
    </div>

    <div class="form-field">
      <%= form.label :new_password_confirmation %><br>
      <%= form.password_field :new_password_confirmation %>
    </div>

    <div class="form-actions">
      <%= form.submit "Update Password" %>
    </div>
  <% end %>

  <div class="form-actions">
    <%= link_to "← Back to Profile", profile_path, class: "back-button" %>
  </div>
</div>
